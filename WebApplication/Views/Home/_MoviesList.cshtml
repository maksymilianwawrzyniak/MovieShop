@model IEnumerable<Movie>


<div class="container-fluid">
    <div class="row">
        @foreach (var movie in Model)
            {
                <div class="col-sm-6">
                    <a asp-controller="Movie" asp-action="BuyMovie" asp-route-id="@movie.Id">
                        <div class="container">
                            <div>
                                <img src="@movie.ThumbnailPath" class="img-thumbnail mx-auto d-block" alt="@movie.Title"/>
                            </div>
                            <div class="text-center">
                                @movie.Title
                            </div>
                        </div>
                    </a>
                </div>
            }
    </div>
</div>