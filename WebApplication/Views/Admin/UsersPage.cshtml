@model WebApplication.ViewModels.AdminUsersPageModel
@{
    ViewData["Title"] = "Users";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-5">
            <div class="row">
                <h3>Users</h3>
            </div>
            <div class="row">
                @foreach (var user in Model.Users)
                {
                    <div>
                        <div class="col-8">@user.Username (@user.Email)</div>
                        <div class="col-4">
                            <button class="btn btn-primary">Delete</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>