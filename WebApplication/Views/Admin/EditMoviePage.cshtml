@model Movie

<form method="post" asp-route="EditMovie">
    <div>
        <input asp-for="Id" value="@Model.Id" hidden/>
    </div>
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" value="@Model.Title"/>
    </div>
    <div>
        <label asp-for="Genre"></label>
        <input asp-for="Genre"  value="@Model.Genre"/>
    </div>
    <div>
        <label asp-for="Published"></label>
        <input asp-for="Published"  value="@Model.Published"/>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price"  value="@Model.Price"/>
    </div>
    <div>
        <label asp-for="ThumbnailPath"></label>
        <input asp-for="ThumbnailPath"  value="@Model.ThumbnailPath"/>
    </div>
    <button type="submit" class="btn btn-primary btn-lg">OK</button>
</form>