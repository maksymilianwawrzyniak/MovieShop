@model WebApplication.ViewModels.AdminPageModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <div class="row">
                <h3>Movies</h3>
            </div>
            <div class="row">
                <div class="col-4">
                    @await Html.PartialAsync("../Movie/_NewMovieItemView")
                </div>
                @foreach (var movie in Model.Movies)
                {
                    <div class="col-4">
                        @await Html.PartialAsync("../Movie/_MovieItemView", movie)
                    </div>
                }
            </div>
        </div>
        <div class="col-5">
            <div class="row">
                <h3>Users</h3>
            </div>
            <div class="row">
                @foreach (var user in Model.Users)
                {
                    <div>
                        <div class="col-8">@user.Username (@user.Email)</div>
                        <div class="col-4">
                            <button></button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>